<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#2196F3"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="8sp"
        android:text="About Notes App"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:textStyle="normal" />

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dialog_title"
        android:text="Version 1.0 Build 823942"
        android:textColor="#BBAAAA"
        android:textSize="18sp"
        android:id="@+id/imv_about"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/notes"/>

    <TextView
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Version 1.0 Build 328942"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imv_about"
        android:id="@+id/txt_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:lineSpacingExtra="12dp"/>

    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txt_desc"
        android:id="@+id/lay_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/about_dev"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="14dp"
        android:layout_below="@+id/lay_desc"
        android:id="@+id/layout_mediasoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/act_fb"
            style="?android:attr/borderlessButtonStyle"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/facebook"/>

        <ImageButton
            android:id="@+id/act_tw"
            style="?android:attr/borderlessButtonStyle"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/twitter"/>

        <ImageButton
            android:id="@+id/act_gh"
            style="?android:attr/borderlessButtonStyle"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/github"/>

        <ImageButton
            android:id="@+id/act_wp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/wordpress"/>

    </LinearLayout>

</RelativeLayout>